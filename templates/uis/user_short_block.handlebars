
{{#with view}}


<div class="user-short-block-content">

		<div class="user-short-block-content-image">

			{{#if isYoinUser }}

				{{view Yn.SquareImageView class=imagetype
					contentBinding="content"
					withPhoto=true }}

			{{else}}

				{{#if isFbUser }}

					{{view Yn.SquareImageView class=imagetype
						contentBinding="fbId"
						isFBUser=true
						withPhoto=true }}

				{{else}}

					{{view Yn.SquareImageView class=imagetype
						contentBinding=null
						withPhoto=true }}

				{{/if}}

			{{/if}}

		</div>

		<div class="user-short-block-content-name">

			{{#if isYoinUser }}
			
			  <span class="user-short-block-content-username">
			  
			    {{#if content.suspended }}
		        {{I18n someone}}
		      {{else}}
		        {{content.name}}
		      {{/if}}

				</span>

				{{#if showCity}}

					{{#if content.city}}

						<div class="user-short-block-content-city">

							<span class="icon with-text is-icon-x-small" icon="i">

							</span>

							{{content.city.name}}


						</div>

					{{/if}}

				{{/if}}

			{{else}}

				{{#if isFbUser }}

					<span class="user-short-block-content-username">{{fbName}}</span>

				{{else}}

					<span class="user-short-block-content-username">{{phoneName}}</span>

				{{/if}}	

			{{/if}}

		</div>

    {{#if hasInviteButton }}

      <div class="user-short-block-content-button">
      
        {{view Yn.AdaptativeButtonView class="is-blue button-text is-small is-font-white" 
          contentI18n="invite" 
          action="invite" 
          actionContentBinding="content"}}

      </div>

    {{/if}}	

</div>

{{/with}}
