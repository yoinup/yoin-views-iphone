
{{#with view}}

<div id="user-interaction-box" class="box">

	<div id="user-interaction-box-content" class="box-content">

		<div id="user-interaction-liked-block-content">
			
			<div id="user-interaction-liked-block-content-image">
			
				{{view Yn.SquareImageView class="is-normal" contentBinding="content.user" withPhoto=true }}

			</div>

			<div id="user-interaction-liked-block-content-name">

				<span class="text is-big is-black">{{content.user.name}}</span> {{I18n interaction_liked}}

				<div id="user-interaction-liked-block-content-product">

					<span class="icon is-icon-x-small" icon="v"></span>
					{{content.product.name}}

				</div>

			</div>
			
			<div id="user-interaction-liked-block-icon">

				{{view Yn.NotificationImageView class="liked" }}

			</div>
			
		</div>

	</div>

	<div id="user-interaction-liked-details" class="box-title box-title-bottom">
		
		<div id="user-interaction-like-details-city" class="inline">
		
			<span class="icon is-icon-small" icon="i"></span>
			{{content.venue.name}}, {{content.venue.city.name}}
							
		</div>
							
		<div id="user-interaction-like-details-time" class="f-right">
		
			<span class="icon is-icon-small" icon="w"></span>
			{{humanize dateBinding="content.createdAt" }}
		
		</div>

	</div>

</div>

{{/with}}
