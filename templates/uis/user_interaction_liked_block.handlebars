
{{#with view}}

<div class="user-interaction-box box">

	<div class="user-interaction-box-content box-content">

		<div class="user-interaction-liked-block-content">
			
			<div class="user-interaction-liked-block-content-image">
			
				{{view Yn.SquareImageView class="is-normal" contentBinding="content.user" withPhoto=true }}

			</div>

			<div class="user-interaction-liked-block-content-name">

				<span class="text is-big is-black">{{content.user.name}}</span> {{I18n interaction_liked}}

				<div class="user-interaction-liked-block-content-product">

					{{view Yn.IconView class="with-text is-icon-x-small" iconBinding="content.product.category.icon" }}
					{{content.product.name}}

				</div>

			</div>
			
			<div class="user-interaction-liked-block-icon">

				{{view Yn.NotificationImageView class="liked" }}

			</div>
			
		</div>

	</div>

	<div class="user-interaction-liked-details box-title box-title-bottom">
		
		<div class="user-interaction-liked-details-city inline">

			{{#if content.venue}}
		
				<span class="icon with-text is-icon-small" icon="i"></span>
				{{content.venue.name}}, {{content.venue.city.name}}

			{{/if}}
							
		</div>
							
		<div class="user-interaction-liked-details-time f-right">
		
			<span class="icon with-text is-icon-small" icon="w"></span>
			{{humanize dateBinding="content.created" }}
		
		</div>

	</div>

</div>

{{/with}}
