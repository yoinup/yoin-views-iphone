
{{#with view}}

<div class="user-interaction-box box">

	<div class="user-interaction-box-content box-content">
	
		<div class="user-interaction-commented-block-content">
		
			<div class="user-interaction-commented-block-content-image">
			
				{{view Yn.SquareImageView class="is-normal" contentBinding="content.user" withPhoto=true }}

			</div>

			<div class="user-interaction-commented-block-content-name">

				<span class="text is-big is-black">{{content.user.name}}</span> {{I18n interaction_commented}}

				<div class="user-interaction-commented-block-content-product">

					{{view Yn.IconView class="with-text is-icon-x-small" iconBinding="content.product.category.icon" }}
					{{content.product.name}}

				</div>

			</div>
			
			<div class="user-interaction-commented-block-icon">

				{{view Yn.NotificationImageView class="commented" }}

			</div>
			
		</div>

		<div class="space by-one"></div>
			
		<div class="user-block-comment">
			
			{{content.comment}}
			
		</div>

	</div>
	
	<div class="user-interaction-commented-details box-title box-title-bottom">
		
		<div class="user-interaction-commented-details-city inline">

			{{#if content.venue}}
		
				<span class="icon with-text is-icon-small" icon="i"></span>
				{{content.venue.name}}, {{content.venue.city.name}}

			{{/if}}
							
		</div>
							
		<div class="user-interaction-commented-details-time f-right">
		
			<span class="icon with-text is-icon-small" icon="w"></span>
			{{humanize dateBinding="content.createdAt" }}
		
		</div>

	</div>

</div>

{{/with}}
