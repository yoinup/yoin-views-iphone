
{{#with view}}

<div class="user-interaction-box box">

	<div class="user-interaction-box-content box-content">

		<div class="user-interaction-sent-block-content">
			
			<div class="user-interaction-sent-block-content-image">
			
				{{view Yn.SquareImageView class="is-normal" contentBinding="content.fromUser" withPhoto=true }}

			</div>

			<div class="user-interaction-sent-block-content-name">

				<span class="text is-big is-black">{{content.fromUser.name}}</span> {{I18n interaction_sent}}

				<div class="user-interaction-sent-block-content-product">

					{{view Yn.IconView class="with-text is-icon-x-small" iconBinding="content.product.category.icon" }}
					{{content.product.name}}

				</div>

			</div>
			
			<div class="user-interaction-sent-block-icon">

				{{view Yn.NotificationImageView class="sent" }}

			</div>
			
		</div>
			
		<div class="space by-one"></div>
			
		<div class="user-block-invited">

			{{#if content.toUser }}

				{{view Yvi.UserShortBlockView class="is-small"
					contentBinding="content.toUser"
					imagetype="is-small" }}

			{{else}}

				{{#if content.creationFbId }}

					{{view Yvi.UserShortBlockView class="is-small"
						typeBinding="content.creationType"
						fbIdBinding="content.creationFbId"
						fbNameBinding="content.creationUsername"
						imagetype="is-small" }}

				{{else}}

					{{view Yvi.UserShortBlockView class="is-small"
						typeBinding="content.creationType"
						phoneNumberBinding="content.creationPhone"
						phoneNameBinding="content.creationUsername"
						imagetype="is-small" }}

				{{/if}}

			{{/if}}
			
		</div>

	</div>

	<div class="user-interaction-sent-details box-title box-title-bottom">
		
		<div class="user-interaction-sent-details-city inline">

			{{#if content.venue}}
		
				<span class="icon with-text is-icon-small" icon="i"></span>
				{{content.venue_user.name}}, {{content.venue.city.name}}

			{{/if}}
							
		</div>
							
		<div class="user-interaction-sent-details-time f-right">
		
			<span class="icon with-text is-icon-small" icon="w"></span>
			{{humanize dateBinding="content.created" }}
		
		</div>

	</div>

</div>

{{/with}}
