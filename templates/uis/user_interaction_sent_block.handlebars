
{{#with view}}

	<div class="box-content without-padding">

		<div class="block-content">
			
			<div class="block-content-image">

				{{#if content.toUser }}

					{{view Yn.SquareImageView class="is-normal"
						contentBinding="content.toUser"
						withPhoto=true }}

				{{else}}

					{{#if content.creationFbId }}

						{{view Yn.SquareImageView class="is-normal"
							contentBinding="content.creationFbId"
							isFBUser=true
							withPhoto=true }}

					{{else}}

						{{view Yn.SquareImageView class="is-normal"
							contentBinding=null
							withPhoto=true }}

					{{/if}}

				{{/if}}

			</div>

			<div class="block-content-name">

        <span class="main-text">
          {{#if content.toUser }}
          
            {{#if content.toUser.suspended }}
              {{I18n someone}}
            {{else}}
              {{content.toUser.name}}
            {{/if}}

          {{else}}

            {{#if content.creationUsername }}
              {{content.creationUsername}}
            {{else}}
              {{content.creationUsername}}
            {{/if}}

          {{/if}}
        </span>

				<div class="block-content-product">

					{{view Yn.IconView class="with-text is-icon-x-small" iconBinding="content.product.category.icon" }}
					{{content.product.name}}

				</div>

			</div>
			
			<div class="block-icon">

				{{view Yn.NotificationImageView class="sent" }}

			</div>
			
		</div>

	</div>

	<div class="details box-title-bottom">
		
		<div class="details-city inline">

			{{#if content.venue}}
		
				<span class="icon with-text is-icon-small" icon="i"></span>
				{{content.venue.name}}, {{content.venue.city.name}}

			{{/if}}
							
		</div>
							
		<div class="details-time f-right">
		
			<span class="icon with-text is-icon-small" icon="w"></span>
			{{humanize dateBinding="content.created" }}
		
		</div>

	</div>


{{/with}}
