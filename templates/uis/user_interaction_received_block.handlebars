
{{#with view}}

	<div id="user-interaction-received-block-content">
		
		<div id="user-interaction-received-block-content-image">
		
			{{view Yn.SquareImageView class="is-small" contentBinding="content.toUser" }}

		</div>

		<div id="user-interaction-received-block-content-name">

			<span class="text is-big is-black">{{content.toUser.name}}</span> {{I18n interaction_received}}

			<div id="user-interaction-received-block-content-product">

				<span class="icon is-icon-x-small" icon="v"></span>
				{{content.product.name}}

			</div>

		</div>
		
		<div id="user-interaction-received-block-icon">

			{{view Yn.NotificationImageView class="received" }}

		</div>
		
	</div>
	
	<div class="space by-one"></div>
		
	<div id="user-block-inviting">
		
		{{view Yvi.UserShortBlockView contentBinding="content.fromUser" imagetype="is-x-small" }}
		
	</div>

{{/with}}
