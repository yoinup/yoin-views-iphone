
            {{#if yoinContent.isLoaded }} 


                {{#if yoinContent.length }} 

                  <div class="space by-one"></div>

                  {{#view Yvi.ChooseUserBoxView class="box"
                    searchInputBinding="view.searchInput" }}

                      {{#each yoinContent}}

                        {{#view Yvi.ChooseUserContentView 
                          searchBinding="view.searchInput"
                          nameBinding="user.name"
                          action="selectUser"
                          actionContentBinding="user"}}

                          {{view Yn.UserShortBlockView  
                            imagetype="is-small"
                            typeBinding="Yn.UserType.appuser"
                            contentBinding="user" 
                            showCity=false 
                            showStatus=false }}
                        {{/view}}

                      {{/each}}

                    {{/view}}

                  <div class="space by-one"></div>

                {{else}}

                  <div class="empty-view is-absolute"></div>
                  <div class="empty-text is-absolute">{{I18n empty_friends}}</div>

                {{/if}} 


          {{else}} 

            {{view Yn.SpinnerView
              contentI18n="importing_yoin"}}

          {{/if}} 

