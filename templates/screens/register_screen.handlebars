{{#with view }}

  {{#if isBlocked }}
    {{view Yn.SpinnerView}}
  {{/if}}

  <div class="row one">

    <div class="space by-four"></div> 
    <div class="brand-landing-container"></div>
  </div>

  <div class="row two">

    <div class="space"></div> 
    <div class="big-input-content">

      {{#if isPendingPhoneValidation }}

        {{view Yn.InputView id="register-code" class="big-input up down" 
          inputName="code"
          type="number"
          placeholderI18n="code_phone_placeholder" }} 

      {{ else }}

        {{view Yn.InputView id="register-email" class="big-input up" 
          inputName="email"
          type="email"
          placeholderI18n="email" }} 

        {{view Yn.InputView id="register-password" class="big-input" 
          inputName="password"
          type="password"
          placeholderI18n="password" }} 

        {{view Yn.PhoneInputView id="register-phone" class="big-input" 
          placeholderI18n="phone_register_placeholder" }} 

        {{view Yn.InputView id="register-name" class="big-input down" 
          inputName="name"
          type="text"
          placeholderI18n="user_register_placeholder" }} 

      {{/if}}

    </div>
  </div>

  <div class="row three">


      {{#if isPendingPhoneValidation }}

        {{view Yn.SingleBigButtonView class="enter-button is-grey button-text is-big is-font-black" 
          mixins="Yn.FormActionContent"
          inputs="register-code"
          contentI18n="enter" 
          action="insertPhoneValidationCode" }}

      {{else}}

        {{view Yn.SingleBigButtonView class="enter-button is-grey button-text is-big is-font-black" 
          mixins="Yn.FormActionContent"
          inputs="register-email register-password register-phone register-name"
          contentI18n="register" 
          action="registerUser" }}

      {{/if}}

      <div class="space by-two"></div>

      {{view Yn.AdaptativeButtonView class="login-button is-orange button-text is-small is-font-white" 
        contentI18n="login" 
        action="showLogin" }}

  </div>

{{/with}}
