{{#with view}}

  {{#view Yvi.MapSectionView class="map-section"}}

    {{#view Yn.HeaderView id="map-header" class="without-shadow"}}

      {{view Yn.HeaderCloseButtonView }}
      <div class="header-title">
        {{#if showVenue}}
          {{venue.brand.name}}
          {{I18n map_title}}
        {{else}}
        {{/if}}
      </div>

      {{#if showCities }}
        {{#view Yn.AdaptativeButtonView class="header-button l-right is-orange button-text is-small is-font-white" 
          action="openCities"}}
          {{selectedCity.name}}
        {{/view}}
      {{/if}}

    {{/view }}

    {{#if withHeaderAction }}

      <div id="map-header-action" class="header-action">
        <div class="ha-left">

          {{#view Yvi.MapFormInputView}}
            {{view Yvi.MapInputView valueBinding="inputValue"}}
          {{/view}}
          
        </div>
        
        <div class="ha-right">
        
          {{view Yvi.SwitchGeopositionEnablerButton class="rectangle-button is-grey is-small icon is-icon-small" 
            isOnBinding="isOnGeopositionEnabler"
            icon="o" 
            action="switchGeopositionEnabler" }}
          
        </div>
      </div>

    {{/if}}

    {{view Em.ContainerView id="map-screen-container" class="screen-container"}}
  {{/view }}


  {{#view Yn.ScrollerView class="cities-section is-menu-bg aside-right" 
    selectedCityBinding="selectedCity"}}
    <div class="cities">
      {{#each cities}}
        {{#view Yvi.MapCityView 
          class="list-li-menu city main-text-menu"
          action="selectCity"
          actionContentBinding="this"
          contentBinding="this"
          selectedBinding="view.selectedCity"}}
            {{name}}
        {{/view}}
      {{/each}}
    </div>
  {{/view}}

{{/with}}
