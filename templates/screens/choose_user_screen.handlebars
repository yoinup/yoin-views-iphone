{{#with view}}

{{#view Yn.HeaderView }}

  {{view Yn.HeaderCloseButtonView }}
	<div class="header-title">{{I18n header_choose_user}}</div>

{{/view }}

<div class="screen-container">

    {{#if hasYoinFriends}} 

      {{view Yvi.ChooseUserMenuTabsView id="choose-user-menu-tabs" 
        selectedBinding="option" }}

    {{else}}

      {{view Yvi.ChooseUser2MenuTabsView id="choose-user-menu-tabs" 
        selectedBinding="option" }}

    {{/if}}

    {{#view Yn.TabMainView
      currentTabViewBinding="option"}}

        {{#view Yn.ScrollerView
          exclude=".header, #choose-user-menu-tabs"
          viewName="facebook" }}

          {{template "choose_user_facebook"}}

        {{/view}}

        {{#if hasYoinFriends}} 

          {{#view Yn.ScrollerView
            exclude=".header, #choose-user-menu-tabs"
            viewName="yoin" }}

            {{template "choose_user_yoin"}}

          {{/view}}

        {{/if}}

        {{#view Yn.ScrollerView
          exclude=".header, #choose-user-menu-tabs"
          viewName="nearby" }}

          {{template "choose_user_nears"}}

        {{/view}}

    {{/view}}

</div>

{{/with}}
