
{{#with view}}

{{#view Yn.HeaderView id="invite-send-header" class="with-small-shadow"}}
		{{view Yn.BackButtonView }}
		<div class="header-title">{{I18n invite}}</div>
{{/view }}


{{#view Yn.ScrollerView class="screen-container"
	exclude="footer invite-send-header" }}

	<div class="space by-one"></div>

	<div id="block-notifications" class="box">

		<div id="block-notifications-title" class="box-title box-title-top">
			{{I18n notification pluralize=true}}
		</div>

		<div id="block-notifications-list" class="box-content"> 

			<div id="sms-notification" class="block-notifications-element two-column-table">

				<div class="notification-label left-column">
					{{I18n agenda}}
				</div>

				<div class="control right-column">

						{{view Yn.SwitchButtonView
							isOnBinding="isOnSms"
							switchAction="changeSms"
							isDisabledBinding="isAgendaSms"}}

				</div>

			</div>

			{{#if isAgendaEditable}}

				<div id="sms-notification-message" class="block-notifications-element">

					{{view Yn.InputView id="sms-notification-message-text" class="single-input"
						type="text"
						placeholderI18n="write_something_message" }}

				</div>				

			{{/if}}

			<div id="mail-notification" class="block-notifications-element two-column-table is-disabled">

				<div class="notification-label left-column">
					{{I18n email}}
				</div>

				<div class="control right-column">

						{{view Yn.SwitchButtonView
							isOnBinding="isOnMail"
							switchAction="changeMail"
							isDisabledBinding="isMailDisabled"}}

				</div>

			</div>

			{{#if isMailEditable}}

				<div id="mail-notification-message" class="block-notifications-element">

					{{view Yn.InputView id="mail-notification-message-text" class="single-input"
						type="text"
						placeholderI18n="write_something_message" }}

				</div>				

			{{/if}}

			<div id="facebook-notification" class="block-notifications-element two-column-table">

				<div class="notification-label left-column">
					Facebook
				</div>

				<div class="control right-column">

						{{view Yn.SwitchButtonView
							isOnBinding="isOnFacebook"
							switchAction="changeFacebook"
							isDisabledBinding="isFacebookDisabled"}}

				</div>

			</div>

			{{#if isFacebookEditable}}

				<div id="facebook-notification-message" class="block-notifications-element">

					{{view Yn.InputView id="facebook-notification-message-text" class="single-input"
						type="text"
						placeholderI18n="write_something_message" }}

				</div>				

			{{/if}}


				<div id="twitter-notification" class="block-notifications-element two-column-table is-disabled">

					<div class="notification-label left-column">
						Twitter
					</div>

					<div class="control right-column">

						{{view Yn.SwitchButtonView
							isOnBinding="isOnTwitter"
							switchAction="changeTwitter"
							isDisabledBinding="isTwitterDisabled"}}

					</div>

				</div>

			{{#if isTwitterEditable}}

				<div id="twitter-notification-message" class="block-notifications-element">

					{{view Yn.InputView id="twitter-notification-message-text" class="single-input"
						type="text"
						placeholderI18n="write_something_message" }}

				</div>

			{{/if}}

		</div>

	</div>

	<div class="space by-two"></div>

	{{view Yn.MainButtonView id="invite-send" class="is-blue" 
		contentI18n="send" 
		action="sendInvitation"}}

	<div class="space by-two"></div>

{{/view }}

{{/with}}
