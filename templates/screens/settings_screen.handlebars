{{#with view}}

{{#view Yn.HeaderView }}

  {{view Yn.MenuButtonView }}
	<div class="header-title">{{I18n settings}}</div>

  {{#view Yn.AdaptativeButtonView class="header-button l-right is-orange button-text is-small is-font-white" 
    action="goToAbout"}}
    {{I18n about}}
  {{/view}}
{{/view }}

{{#view Yn.ScrollerView class="screen-container"
  exclude=".header"}}

  {{#if initContent }}

    <div class="space by-one"></div>

    <div class="box">

      <div class="box-title-top">
        {{I18n basic_settings}}
      </div>

      <div class="box-content">

        <div class="box-content-element two-column-table">

          <div class="picture left-column"> 
            {{view Yn.SquareImageView class="is-normal" contentBinding="user" withPhoto=true }}
          </div>

          <div class="name middle-column">

            {{view Yn.InputView id="input-username" 
              class="main-text is-transparent"
              inputName="username"
              type="text"
              placeholderI18n="name"
              focusOutAction="changeName"
              valueBinding="user.name" }}

          </div>


        </div>

      </div>

    </div>

    <div class="space by-two"></div>

    <div class="detail-text is-center is-not-in-box">
      {{I18n note_privacy}}
    </div>

    <div class="space by-one"></div>

    <div class="box">

      <div class="box-content">

        <div class="box-content-element two-column-table">

          <div class="main-text main left-column">
            {{I18n privacy}}
          </div>

          <div class="control right-column">
            {{view Yn.SwitchButtonView isOnBinding="isCheckinOn" 
              switchAction="changePrivacy" }}
          </div>

        </div>

      </div>

    </div>

    {{view Yn.MainButtonView
      class="is-red"
      contentI18n="close_session"
      action="closeSession" }}

    {{view Yn.MainButtonView
      class="is-black"
      contentI18n="delete_account"
      action="deleteAccount" }}

  {{/if}}

{{/view }}
{{/with}}

