{{#view Yn.HeaderView }}

  {{view Yn.BackButtonView  }}

    <div class="header-title">{{I18n invite_title}}</div>

  {{view Yn.HeaderButtonView class="l-right" action="next"}}

{{/view }}

<div class="screen-container">


  <div id="invite-product">
    <div class="title">
      {{I18n invite_to_product_title}}:
    </div>

    <div class="content">


        <div class="price-label"> 
          {{product.price}} {{I18n currency_symbol}}
        </div>

    </div>

  </div>


  <div id="invite-user">
    <div class="title">
      {{I18n invite_to_person_title}}:
    </div>

  </div>


  <div id="invite-message">

    <div class="title">
      {{I18n message}}:
    </div>

  </div>

</div>
