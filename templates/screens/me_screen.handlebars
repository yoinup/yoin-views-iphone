{{#with view}} <!-- Get view context -->


{{#view Yn.HeaderView }}

	{{view Yn.HeaderTitleView itemI18n="me_title" }} <!-- EL helper de I18n está hackeado ;) y permite esto -->
	
	{{view Yn.IconBtapView class="l-right header-button rectangle-button is-small is-orange icon is-icon-small" icon="t" }}

{{/view }}

<div id="me-screen-container" class="screen-container">

	<div id="me-screen-content">

		<div id="me-content-header">

				<div id="me-content-header-image">

					{{view Yn.SquareImageView class="is-big" contentBinding="user" }}

				</div>

				<div id="me-content-header-text">


						<div id="me-content-header-text-name">
						
							<div id="me-content-header-text-user-name" class="header-text">
								{{user.name}}
							</div>
							
							<div id="me-content-header-text-user-state" class="state-text">
								{{user.status}}
							</div>

							{{#if user.city}}

								<div id="me-content-header-text-city" class="text is-small is-white">

									<span class="icon is-icon-small" icon="i"></span>

									{{user.city.name}}

								</div>

							{{/if}}

						</div>

				</div>

		</div>

		<div id="me-tabs">

			{{#view Yvi.MeTabOptionView tab="friends" currentTabViewBinding="currentTabView" }}

				<div class="number">92</div>

				<div class="desc">{{I18n user_friends}}</div>

			{{/view}}

			{{#view Yvi.MeTabOptionView tab="unexchanged" currentTabViewBinding="currentTabView" }}

				<div class="number">20</div>

				<div class="desc">{{I18n user_unexchanged}}</div>

			{{/view}}

			{{#view Yvi.MeTabOptionView class="last" tab="sent" currentTabViewBinding="currentTabView" }}

				<div class="number">126</div>

				<div class="desc">{{I18n user_sent}}</div>

			{{/view}}

		</div>



		{{#view Yvi.TabMainView currentTabViewBinding="currentTabView" }}

				{{#view class="me-tab-pane" viewName="friends" }}
				
					<div class="space by-one"></div>

					<!-- List of friends -->

					<!--<div class="box">
						<div class="box-content">
							
								{{view Yvi.UserShortBlockView contentBinding="view.user" }}
							
						</div>
					</div>-->

					<div class="box">
						<div class="box-content">
							{{view Yvi.UserInteractionCommentedBlockView contentBinding="this" }}
						</div>
						<div class="box-title box-title-bottom">
							<div class="inline">
								<span class="icon is-icon-small" icon="i"></span>
								{{city.name}}
							</div>
							<div class="f-right">
								<span class="icon is-icon-small" icon="w"></span>
								22m
							</div>
						</div>
					</div>
					
				{{/view}}


				{{#view class="me-tab-pane unexchanged" viewName="unexchanged" }}
				
					<div class="space by-one"></div>

					<div class="box">
						<div class="box-title box-title-top">
							<div class="image">
								{{view Yn.SquareImageView class="is-x-small" contentBinding="" }}
							</div>
							<div class="name">
								Linda te invitó
							</div>
						</div>
						<div class="box-content">
							<div class="image">
								{{view Yn.SquareImageView class="is-normal" contentBinding="" }}
							</div>
							<div class="product">
								Frapuccino de regalo
								<div class="venue">
									<span class="icon is-icon-small city" icon="i"></span>
									Madrid
								</div>
							</div>
							<div class="exchange-button">
								{{view Yn.AdaptativeButtonView class="is-blue button-text is-small is-font-white" contentI18n="exchange" action="" }}
							</div>
						</div>
					</div>
					
					<div class="space by-one"></div>

				{{/view}}


				{{#view class="me-tab-pane" viewName="sent" }}
				
					<div class="space by-one"></div>

					{{#each sentinvitations}}
					<div class="box">
						<div class="box-content">
							{{view Yvi.UserInteractionSentBlockView contentBinding="this" }}
						</div>
						<div class="box-title box-title-bottom">
							<div class="inline">
								<span class="icon is-icon-small" icon="i"></span>
								{{city.name}}
							</div>
							<div class="f-right">
								<span class="icon is-icon-small" icon="w"></span>
								22m
							</div>
						</div>
					</div>
					
					<div class="space by-one"></div>
					
					{{/each}}

				{{/view}}

		{{/view}}


	</div>

</div>

{{/with}}


