{{#with view}} <!-- Get view context -->


{{#view Yn.HeaderView }}

	{{view Yn.HeaderTitleView itemI18n="me_title" }} <!-- EL helper de I18n estÃ¡ hackeado ;) y permite esto -->
	{{view Yn.HeaderButtonView class="l-right" icon="t" }}

{{/view }}

<div id="me-screen-container" class="screen-container">

	<div id="me-screen-content">

		<div id="me-content-header">

				<div id="me-content-header-image">

					{{view Yn.SquareImageView class="is-normal" contentBinding="user" }}

				</div>

				<div id="me-content-header-text">


						<div id="me-content-header-text-name" class="text is-font-bold is-white">

							{{user.name}}
							
							<div id="me-content-header-text-user-state" class="text is-small is-white is-font-italic">"Writing code..."</div>

							{{#if user.city}}

								<div id="me-content-header-text-city text is-small is-white">

									<span class="icon is-icon-small" icon="i"></span>

									{{user.city.name}}

								</div>

							{{/if}}

						</div>

				</div>

		</div>

		<div id="me-tabs">

			{{#view Yvi.MeTabOptionView tab="friends" currentTabViewBinding="currentTabView" }}

				<div class="number">92</div>

				<div class="desc">amigos</div>

			{{/view}}

			{{#view Yvi.MeTabOptionView tab="sent" currentTabViewBinding="currentTabView" }}

				<div class="number">20</div>

				<div class="desc">enviadas</div>

			{{/view}}

			{{#view Yvi.MeTabOptionView tab="received" currentTabViewBinding="currentTabView" }}

				<div class="number">126</div>

				<div class="desc">recibidas</div>

			{{/view}}

		</div>



		{{#view Yvi.TabMainView currentTabViewBinding="currentTabView" }}

				{{#view class="me-tab-pane" viewName="friends" }}
				
					<div class="space is-small"></div>

					<div class="box">
						<div class="box-content">
							
								{{view Yvi.UserShortBlockView contentBinding="view.user" }}
							
						</div>
					</div>

				{{/view}}

				{{#view class="me-tab-pane" viewName="sent" }}
				
					<div class="space is-small"></div>

					{{#each sentinvitations}}
					<div class="box">
						<div class="box-content box-content-with-title-bottom">
							{{view Yvi.UserInteractionSentBlockView contentBinding="this" }}
						</div>
						<div class="box-title box-title-bottom">
							<div class="inline">
								<span class="icon is-icon-small" icon="i"></span>
								{{city.name}}
							</div>
							<div class="f-right">
								<span class="icon is-icon-small" icon="w"></span>
								22m
							</div>
						</div>
					</div>
					
					<div class="space is-small"></div>
					
					{{/each}}

				{{/view}}

				{{#view class="me-tab-pane" viewName="received" }}
				
					<div class="space is-small"></div>

					{{#each receivedinvitations}}
					<div class="box">
						<div class="box-content box-content-with-title-bottom">
							{{view Yvi.UserInteractionReceivedBlockView contentBinding="this" }}
						</div>
						<div class="box-title box-title-bottom">
							<div class="inline">
								<span class="icon is-icon-small" icon="i"></span>
								{{city.name}}
							</div>
							<div class="f-right">
								<span class="icon is-icon-small" icon="w"></span>
								22m
							</div>
						</div>
					</div>
					
					<div class="space is-small"></div>
					
					{{/each}}

				{{/view}}

		{{/view}}


	</div>

</div>

{{/with}}


