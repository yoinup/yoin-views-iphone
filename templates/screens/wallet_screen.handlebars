{{#with view }}
{{#view Yn.HeaderView id="wallet-header" class="without-shadow" }}

  {{view Yn.MenuButtonView }}
  <div class="header-title">
    {{#if isInbox }}
      {{I18n inbox_wallet_title}}
    {{else}}
      {{I18n archived_wallet_title}}
    {{/if}}
  </div>

  {{view Yvi.WalletOptionButtonView class="header-button rectangle-button l-right is-orange button-text is-small"
    isInboxBinding="isInbox"
    action="changeInbox"}}

{{/view }}
<div class="screen-container">

  {{#if initContent }}

    {{#if isInbox }}
      {{view Yvi.WalletContentView
        invitationsBinding="inboxInvitations"
        isInbox=true
        excludeGlobal="wallet-header" }}
    {{else}}
      {{view Yvi.WalletContentView
        invitationsBinding="archivedInvitations"
        isInbox=false
        excludeGlobal="wallet-header" }}
    {{/if}}

  {{/if}}

</div>
{{/with}}
